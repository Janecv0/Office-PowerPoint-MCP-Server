FROM python:3.10-alpine

# Install system dependencies (if any required, e.g., for pillow)
RUN apk add --no-cache gcc musl-dev libffi-dev

# Set work directory
WORKDIR /app

# Copy the application code
COPY . .

#test2

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Create output directory for saved presentations
RUN mkdir -p /app/output

# Expose default port for Railway port detection
EXPOSE 8000

# Default entrypoint (Railway startCommand overrides this)
ENTRYPOINT ["python", "ppt_mcp_server.py", "--transport", "sse"]
